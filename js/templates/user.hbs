<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{displayName}}</h3>
  </div>
  
  <div class="panel-body">
    {{gravatar-image email=email alt=displayName size=200}}
    <dl>
      <dt>Email</dt>
      <dd>{{email}}</dd>
    </dl>
    {{#mail-to email=email}}
      {{email}}
    {{/mail-to}}
  </div>
</div>
